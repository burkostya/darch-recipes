#!/bin/bash
set -e

# Resyn the database
pacman -Sy --noconfirm

# Install i3
pacman -S --noconfirm --needed i3 compton xorg-xinit

gpg --recv-keys A1774C1B37DC1DCEDB65EE469B8450B91D1362C1
# gpg --lsign-key A1774C1B37DC1DCEDB65EE469B8450B91D1362C1
trizen -S --noconfirm --noedit --needed j4-dmenu-desktop
trizen -S --noconfirm --noedit --needed polybar
trizen -S --noconfirm --noedit --needed unclutter-xfixes-git
pacman -S --noconfirm --needed autocutsel

pacman -S --noconfirm --needed redshift

pacman -S --noconfirm --needed xorg-xwininfo xorg-xprop
cp i3-window-criteria /usr/local/bin/

trizen -S --noconfirm --noedit --needed peek

echo -en "y\nn" | trizen -Scc